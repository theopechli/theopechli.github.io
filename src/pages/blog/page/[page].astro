---
import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import InfoRuler from '../../../components/InfoRuler.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../../components/FormattedDate.astro';
import { Image } from 'astro:assets';

export async function getStaticPaths({ paginate }) {
	const posts = (await getCollection('blog')).sort(
		(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
	);
	return paginate(posts, { pageSize: 7 });
}

const { page } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}

			a:hover {
				text-decoration: none;
			}

			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}

			ul li {
				width: calc(50% - 1rem);
			}

			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}

			ul li:first-child img {
				width: 100%;
			}

			ul li:first-child .title {
				font-size: 2.369rem;
			}

			ul li:first-child a:hover h4 {
				text-underline-offset: 12px;
			}

			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}

			ul li a {
				display: block;
			}

			.title {
				margin: 0;
				color: var(--fg-main);
				line-height: 1;
			}

			.date {
				margin: 0;
				padding: 0.5em 0;
				color: var(--fg-dim);
			}

			ul li a h4 {
				line-height: 1.4;
			}

			ul li a:hover h4,
			ul li a:hover .date {
				color: var(--fg-link);
				text-decoration: underline;
				text-decoration-thickness: .125em;
				text-underline-offset: 8px;
			}

			ul li a:visited h4,
			ul li a:visited .date {
				color: var(--fg-link-visited);
			}

			ul a:hover img {
				box-shadow: var(--box-shadow);
			}

			.pagination {
				display: flex;
				justify-content: space-between;
			}

			.pagination-left, .pagination-right {
				display: flex;
				gap: 1em;
			}

			@media (max-width: 720px) {
				ul li {
					width: 100%;
					text-align: center;
				}

				ul li:first-child {
					margin-bottom: 0;
				}

				ul li:first-child .title {
					font-size: 1.563em;
				}

				ul li:first-child a:hover h4 {
					text-underline-offset: 8px;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<InfoRuler />
		<main>
			<section>
				<ul>
					{
						page.data.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && <Image width={720} height={360} src={post.data.heroImage} alt="" />}
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
				<div class="pagination">
					<div class="pagination-left">
						{page.url.first ? <a href={page.url.first}>First</a> : null}
						{page.url.prev ? <a href={page.url.prev}>Previous</a> : null}
					</div>
					<div class="pagination-right">
						{page.url.next ? <a href={page.url.next}>Next</a> : null}
						{page.url.last ? <a href={page.url.last}>Last</a> : null}
					</div>
				</div>
			</section>
		</main>
	</body>
</html>
