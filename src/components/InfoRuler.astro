<style>
	button {
		display: flex;
		align-items: center;
		color: var(--fg-main);
		background: var(--bg-main);
		cursor: pointer;
		border: none;
		transition: none;
	}

	.info-ruler {
		padding: 0 6em 1em 6em;
		margin: 0;
	}

	.info-ruler-top {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
	}

	.wrapper {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		gap: 2em;
		padding-bottom: 0.5em;
	}

	.theme-buttons {
		display: flex;
		flex-direction: row;
		gap: 0.6em;
		text-align: left;
	}

	.date {
		margin: 0;
		align-content: center;
	}

	.social-links {
		display: flex;
		gap: 1em;
	}

	.social-links > a {
		display: flex;
		align-items: center;
	}

	.copyright {
		font-size: 12px;
		line-height: normal;
		text-align: right;
	}

	@media (max-width: 920px) {
		.info-ruler {
			padding: 0 2em 1em 2em;
		}

		.info-ruler-top {
			flex-direction: column;
			gap: 1em;
		}

		.date {
			text-align: right;
		}
	}
</style>
